package 메서드연습;

import java.awt.FlowLayout;
import java.awt.Font;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class 로그인화면 {

	public static void main(String[] args) {
		Font font = new Font("맑은 고딕", 1, 50);
		JFrame f = new JFrame();
		f.setSize(650, 700);
		FlowLayout flow = new FlowLayout();
		f.setLayout(flow);
		
		// 라벨 3개, 텍스트필드2대, 버튼 2개
		JLabel top = new JLabel();
		top.setText("이미지 들어가는 곳");
		top.setFont(font);
		
		JLabel id1 = new JLabel();
		id1.setText("아이디 : ");
		id1.setFont(font);
		JLabel pw1 = new JLabel();
		pw1.setText("비밀번호 : ");
		pw1.setFont(font);
		
		JTextField id2 = new JTextField(10);
		id2.setFont(font);
		JTextField pw2 = new JTextField(10);
		pw2.setFont(font);
		
		JButton login = new JButton();
		login.setText("로그인");
		login.setFont(font);
		JButton reset = new JButton();
		reset.setText("지우기");
		reset.setFont(font);
		ImageIcon icon1 = new ImageIcon("로그인");
		ImageIcon icon1 = new ImageIcon("로그인 실패");
		
		// 얹는 부분
		f.add(top);
		f.add(id1);
		f.add(id2);
		f.add(pw1);
		f.add(pw2);
		f.add(login);
		f.add(reset);
		
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setVisible(true); // void
	}

}
